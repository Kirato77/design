{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@jundao/design": ["src/components/index.ts"],
      "@jundao/design/*": ["src/components/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules"]
}